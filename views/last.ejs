<div id="Election management" class="tabcontent">
  <h3>New Election</h3>
  <form id="newelection_form" action="/new_election" method="post">
    <div class="container">
      <div class="error" id="error1"></div>
        <label for="e_ID"><b>Election ID:</b></label><br>
      <input type="text" id="eid_ne" placeholder="Enter election id" name="e_ID" required><br>
      <label for="e_PASS"><b>Election Password:</b></label><br>
        <input type="password" id="epass_ne" placeholder="Election Pass" name="e_PASS" required><br>
      <label for="e_name"><b>Election Name:</b></label><br>
      <input type="text" id="ename_ne" placeholder="Enter election name" name="e_name" required><br>
      <label for="e_date"><b>Election date: </b></label>
      <input type="date" id="edate_ne" name="e_date" required><br /><br>
      <label for="est">From time:</b></label>
      <input type="time" id="estime_ne" name="e_start_time" required>
      <label for="ect">To time:</b></label>
      <input type="time" id="ectime_ne" name="e_close_time" required></br></br>


      <label for="v_date"><b>Verification date:</b></label>
      <input type="date" id="vdate_ne"  name="v_date" required><br /></br>
      <label>

        <label for="e_mode"><b>Election Mode:</b></label>
        <input type="radio" class="emoderadio1" id="areab " name="e_mode" value="area-based"  required>
        <label for="areabsd">Area-Based</label>
        <input type="radio" class="emoderadio2" id="areapbas" name="e_mode" value="area-pos-based" required>
        <label for="areapsbsd">Area Position-Based</label>
        <input type="radio" class="emoderadio3" id="posonl" name="e_mode" value="pos-only" onClick="hiderea()" required>
        <label for="posonl">Position-Based</label>
      </label><br>
      <input type="text" id="rreano" placeholder="Enter No: Areas To conduct Election" name="narea"  >
      <input type="text" id="pposno" placeholder="Enter No: Positions To conduct Election" name="npos"  >
        <div class="butn1" style="background-color:#ffffff">
        <button id="newelectionbutton" class="btn2" type="submit" class="submitbutton">submit</button>
      </div>
    </div>
  </form>

  <h3>Go to Registrations</h3>
  <form id='gotoreg_form' method="post">
    <div class="container">
      <div class="error" id="error4"></div>
      <label for="e_ID"><b>Election Id:</b></label><br>
      <input type="text" id='eid_gtr' placeholder="Enter election id" name="e_ID" required><br>
      <label for="e_PASS"><b>Election Pass:</b></label><br>
      <input type="password" id='epass_gtr' placeholder="Election Pass" name="e_PASS" required><br>
      <input type="radio"  id="regcandi " name="regtype" value="candidate"  required>
      <label for="regcandi">Candidate Registration</label>
      <input type="radio"  id="regvotee" name="regtype" value="voter" required>
      <label for="areapsbsd">Voter Registration</label>


        <div class="butn1" style="background-color:#ffffff">
          <button class="btn2" type="submit" formaction="/Registrations" class="enablebutton">Go</button>

        </div>
    </div>
  </form>


  <h3>Update Verification Date</h3>
    <form action="/update_verification_date" method="post">
