        <input type="text" placeholder="Enter election id" name="e_ID" required><br>
        <label for="e_PASS"><b>Election Pass:</b></label><br>
        <input type="password" placeholder="Election Pass" name="e_PASS" required><br>
        <label for="e_date"><b>Election date:</b></label><br><br>
        <input type="date"  name="e_date" required></br></br>
        <label for="estime">From time:</b></label>
        <input type="time" id="appt" name="estime">
        <label for="ectime">To time:</b></label>
        <input type="time" id="appt" name="ectime"></br></br>
            <div class="butn1" style="background-color:#ffffff">
              <button class="btn2" type="submit" class="Updatebutton">Update</button>
